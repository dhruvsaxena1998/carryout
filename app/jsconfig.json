{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"],
      "@animations/*": ["src/animations/*"],
      "@common/*": ["./src/common/*"],
      "@components/*": ["./src/components/*"],
      "@helpers/*": ["./src/helpers/*"],
      "@layouts/*": ["src/layouts/*"],
      "@navigator/*": ["src/navigator/*"],
      "@screens/*": ["./src/screens/*"],
      "@store/*": ["./src/store/*"],
      "@typesdef/*": ["src/@types/*"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "include": ["src/**/*", "src/@types/"],
  "exclude": ["node_modules"]
}
